#include <iostream>
using namespace std;

int main()
{
    int num;
    cout<< "\nPlease enter the assigned number to your answer.\n"<<endl;
    cout<< "What is your favorite color of the rainbow?\n\n";
    cout<< "1) Red\n2) Orange\n3) Yellow\n4) Green\n5) Blue\n6) Indigo\n7) Violet\n";
    cout<< "Answer: ";
    cin>> num;
    switch (num)
    {
    case 1:
        cout<< "\nYou selected the color red."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    case 2:
         cout<< "\nYou selected the color orange."<<endl;
         cout<<"Thank you for selecting a color."<<endl;
        break;
    case 3:
        cout<<"\nYou selected the color yellow."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    case 4:
        cout<< "\nYou selected the color green."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    case 5:
        cout<< "\nYou selected the color blue."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    case 6:
        cout<< "\nYou selected the color indigo."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    case 7:
        cout<< "\nYou selected the color violet."<<endl;
        cout<<"Thank you for selecting a color."<<endl;
        break;
    default:
        cout<<"\nYou've entered a number that is not associated to a color option."<<endl;
        cout<<"Thank you,\nGoodbye.\n";
        break;
    }
    return 0;
}
