#include <iostream>
using namespace std;

//function Prototype
double addition(double, double);

int main()
{
    double num1, num2, solution;
    cout<<"Hello for this code we will be adding two numbers.\n";
    solution= addition(num1,num2);
    cout<<"The sum is "<< solution<<".";
    return 0;
}

double addition(double num1, double num2)
{
    cout<< "Type a positive number: ";
    cin>> num1;
    cout<< "Type another positive number : ";
    cin>> num2;
    return num1+num2;
}

