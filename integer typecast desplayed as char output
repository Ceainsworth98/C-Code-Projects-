#include <iostream>
#include <string>
using namespace std;

int main()
{
    int number;
    char letter;
    
    //Convert integer to char
    cout << "This program converts integers to Char\n";
    cout << "Type an integer between 65-122 to be converted: ";
    cin >> number;
    letter = static_cast<char>(number) ;
    cout << "The number "<<number<< " was converted to Char.\n";
    cout << "The result is " <<letter<< "." << endl;  
    return 0;
}

